<textarea
  class="pt-4 font-mono pl-4 block resize-none w-full h-72 rounded mb-4 focus:outline-none focus:ring-2 focus:ring-black"
  name="link"
  id="link"
  placeholder="Paste link here..."
>
</textarea>

<script>
  navigator.clipboard
    .readText()
    .then(
      (clipText) => (document.querySelector("textarea")!.innerText = clipText)
    );
</script>
